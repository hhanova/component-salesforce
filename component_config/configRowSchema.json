{
  "title": "Operation Configuration",
  "type": "object",
  "required": [
    "operation",
    "serial_mode",
    "sf_object"
  ],
  "properties": {
    "sf_object": {
      "title": "Object",
      "type": "string",
      "propertyOrder": 1,
      "description": "Salesforce object eg. Contact"
    },
    "operation": {
      "title": "Operation",
      "type": "string",
      "enum": [
        "Insert",
        "Update",
        "Upsert",
        "Delete"
      ],
      "default": "Object",
      "propertyOrder": 2
    },
    "serial_mode": {
      "title": "Serial mode",
      "format": "checkbox",
      "type": "boolean",
      "propertyOrder": 3,
      "default" : true
    },
    "replace_string": {
      "title": "Replace string",
      "type": "string",
      "description": "String to be replaced for dot in column name",
      "propertyOrder": 4
    },
    "upsert_field_name": {
      "title": "Upsert field name",
      "type": "string",
      "description": "Name of the file where external IDs are stored for upsert operation",
      "options": {
        "dependencies": {
          "operation": "Upsert"
        }
      },
      "propertyOrder": 5
    },
    "assignment_id": {
      "title": "Assignment Id",
      "type": "string",
      "description": "ID of Lead Assignment rule you want to run after import",
      "propertyOrder": 6
    },
    "output_errors": {
      "title": "Output errors",
      "format": "checkbox",
      "type": "boolean",
      "propertyOrder": 7,
      "default" : true
    }
  }
}